CREATE TABLE Person(
    id int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY ,
    fullname varchar(100) UNIQUE ,
    birthday int
);

CREATE TABLE Book(
    book_id int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY ,
    person_id int REFERENCES Person(id) ON DELETE SET NULL ,
    name varchar,
    author varchar,
    year int
);

